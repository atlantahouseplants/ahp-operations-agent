# Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key

# Webhook auth (service form sends this in x-api-key header)
AHP_API_KEY=generate-a-random-string

# Google OAuth 2.0 credentials
# Client ID + Secret: GCP Console → APIs & Services → Credentials → OAuth 2.0 Client IDs
# Refresh Token: run `node scripts/get-refresh-token.js` once to generate
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REFRESH_TOKEN=your-refresh-token

# Google Sheets IDs (from the spreadsheet URL)
SPREADSHEET_ID=your-google-sheets-id-here
PROCUREMENT_SPREADSHEET_ID=your-procurement-spreadsheet-id-here

# Alert recipient
GEOFF_EMAIL=geoff@atlantahouseplants.com

# Claude model config
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=4096
